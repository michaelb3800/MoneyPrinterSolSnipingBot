{
  "compilerOptions": {
    "outDir": "dist",
    "module": "es2020",
    "target": "es2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "lib": ["es2020"],
    "skipLibCheck": true,
    "sourceMap": false
  },
  "include": ["*.ts"]
}
